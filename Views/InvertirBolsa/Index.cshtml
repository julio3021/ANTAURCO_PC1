@model ANTAURCO_PC1.Models.Operaciones

@{
    ViewBag.Title = "Inversiones Operar en Bolsa";
    var list_operaciones = ViewData["listaOperaciones"] as List<Operaciones>;
}

<div class="container py-5">
    <h1 class="text-center mb-5 display-4 font-weight-bold text-black">@ViewBag.Title</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 bg-dark text-light">
                <div class="card-body p-4">
                    <form asp-controller="InvertirBolsa" asp-action="Operacion" method="post">
                        <div class="form-group">
                            <label asp-for="Nombre" class="font-weight-bold">Nombres:</label>
                            <input asp-for="Nombre" class="form-control form-control-lg bg-secondary text-light border-0 shadow-sm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="font-weight-bold">Apellidos:</label>
                            <input asp-for="Apellido" class="form-control form-control-lg bg-secondary text-light border-0 shadow-sm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Correo" class="font-weight-bold">Correo Electr贸nico:</label>
                            <input asp-for="Correo" class="form-control form-control-lg bg-secondary text-light border-0 shadow-sm" />
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaOperacion" class="font-weight-bold">Fecha de Operaci贸n:</label>
                            <input asp-for="FechaOperacion" type="date" class="form-control form-control-lg bg-secondary text-light border-0 shadow-sm" />
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold">Instrumentos (escoja al menos 1):</label><br />
                            <div class="d-flex flex-wrap">
                                <div class="form-check form-check-inline text-light">
                                    <input class="form-check-input" type="checkbox" name="Instrumentos" value="SP500" />
                                    <label class="form-check-label">S&P 500 ($500)</label>
                                </div>
                                <div class="form-check form-check-inline text-light">
                                    <input class="form-check-input" type="checkbox" name="Instrumentos" value="DowJones" />
                                    <label class="form-check-label">Dow Jones ($300)</label>
                                </div>
                                <div class="form-check form-check-inline text-light">
                                    <input class="form-check-input" type="checkbox" name="Instrumentos" value="BonosUS" />
                                    <label class="form-check-label">Bonos US ($120)</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="MontoAbonar" class="font-weight-bold">Monto a Abonar:</label>
                            <input asp-for="MontoAbonar" class="form-control form-control-lg bg-secondary text-light border-0 shadow-sm" />
                        </div>
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-lg shadow-lg text-black" style="background-color: #ffffff; border-color: #1f1f1f;">Invertir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (list_operaciones != null && list_operaciones.Any())
    {
        <div class="mt-5">
            <h2 class="text-center mb-4 font-weight-bold text-black">Resumen de Compra</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover shadow-sm text-light" style="background-color: #1f1f1f;">
                    <thead class="thead-dark">
                        <tr>
                            <th>Instrumento</th>
                            <th>Fecha de Operaci贸n</th>
                            <th>IGV (18%)</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var operacion in list_operaciones)
                        {
                            foreach (var instrumento in operacion.Instrumentos)
                            {
                                <tr>
                                    <td>@instrumento</td>
                                    <td>@operacion.FechaOperacion.ToShortDateString()</td>
                                    <td>@(instrumento == "SP500" ? (500 * 0.18M) : instrumento == "DowJones" ? (300 * 0.18M) : (120 * 0.18M))</td>
                                    <td>@(instrumento == "SP500" ? 500 : instrumento == "DowJones" ? 300 : 120)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4 text-black">
                <p><strong>Comisi贸n:</strong> @list_operaciones.LastOrDefault()?.Comision</p>
                <p><strong>Total a Pagar:</strong> @list_operaciones.LastOrDefault()?.Total</p>
            </div>
        </div>
    }
</div>

<style>
    body {
        background-color: #121212;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4 {
        color: #000000;
        font-weight: 700;
    }

    .card {
        border-radius: 12px;
        background-color: #1f1f1f;
    }

    .form-control-lg {
        border-radius: 8px;
        padding: 12px;
    }

    .btn-lg {
        border-radius: 8px;
        padding: 12px 40px;
        background-color: #1f1f1f;
        border: none;
    }

    .btn-lg:hover {
        background-color: #333;
    }

    .table {
        border-radius: 8px;
    }

    .thead-dark th {
        background-color: #333;
        color: #f8f9fa;
        font-weight: 600;
    }
</style>
